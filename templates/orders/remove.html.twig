{% extends "main.html.twig" %}

{% block title %}{{ 'orders.edit.label'|trans }}{% endblock %}

{% block post_javascript %}
    <script src="{{ asset('build/collection.js') }}"></script>
{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('orders') }}">{{ 'orders.label'|trans }}</a></li>
        <li class="breadcrumb-item active">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    {{ form_start(form) }}

    <div class="card border-danger">
        <div class="card-header bg-danger text-white">{{ 'orders.remove.label'|trans }}</div>

        <div class="card-body">
            <div class="bs-callout bs-callout-info">
                <h5>{{ 'info.label'|trans }}</h5>
                <p>{{ 'orders.remove.info'|trans }}</p>
            </div>

            {{ form_widget(form.group_general.confirm) }}
        </div>
    </div>

    <button type="submit" class="btn btn-danger btn-sm">
        <i class="fas fa-save"></i> {{ 'orders.remove.submit'|trans }}
    </button>

    <a href="{{ path('show_order', { uuid: order.uuid }) }}" class="btn btn-secondary btn-sm">
        <i class="fas fa-arrow-left"></i> {{ 'actions.cancel'|trans }}
    </a>

    {{ form_end(form) }}
{% endblock %}
