{% extends "main.html.twig" %}

{% block title %}{{ 'orders.edit.label'|trans }}{% endblock %}

{% block post_javascript %}
    <script src="{{ asset('build/collection.js') }}"></script>
{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('orders') }}">{{ 'orders.label'|trans }}</a></li>
        <li class="breadcrumb-item active">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    {{ form_start(form) }}

    {% include "_includes/student_base.html.twig" with { student: student, showFooter: false } only %}

    <div class="card">
        <div class="card-header">{{ 'label.general'|trans }}</div>

        <div class="card-body">
            <div class="bs-callout bs-callout-info">
                <h5>{{ 'info.label'|trans }}</h5>
                <p>{{ 'orders.account_information.info'|trans() }}</p>
            </div>

            {{ form_row(form.depositorFirstname) }}
            {{ form_row(form.depositorLastname) }}
            {{ form_row(form.depositorBirthday) }}
            {{ form_row(form.depositorStreet) }}
            {{ form_row(form.depositorHouseNumber) }}
            {{ form_row(form.depositorPlz) }}
            {{ form_row(form.depositorCity) }}
            {{ form_row(form.depositorCountry)}}
            {{ form_row(form.depositorPhoneNumber) }}
            {{ form_row(form.depositorEmail) }}
            {{ form_row(form.iban) }}
        </div>
    </div>

    <div class="card">
        <div class="card-header">{{ 'orders.siblings.label'|trans }}</div>
        <div class="card-body">
            <div class="siblings" data-collection="siblings" data-prototype="{{ form_widget(form.siblings.vars.prototype)|e('html_attr') }}" data-id="{{ form.siblings.vars.id }}">
                {% for sibling in form.siblings %}
                    {{ form_widget(sibling) }}
                {% endfor %}
            </div>

            {{ form_errors(form.siblings) }}
            {% do form.siblings.setRendered %}

        </div>

        <div class="card-footer">
            <button class="btn btn-outline-primary btn-sm btn-add" type="button" data-collection="siblings">
                <i class="fa fa-plus"></i> {{ 'actions.add'|trans }}
            </button>
        </div>
    </div>

    {% if confirmations|length > 0 %}
        <div class="card">
            <div class="card-header">{{ 'orders.confirmations.label'|trans }}</div>

            <div class="card-body">
                {% for confirmation in confirmations %}
                    <div class="bs-callout bs-callout-info">
                        <h5>{{ 'info.label'|trans }}</h5>

                        {{ confirmation|markdown_to_html  }}
                    </div>
                {% endfor %}

                {{ form_widget(form.confirm) }}
            </div>
        </div>
    {% endif %}

    <button type="submit" class="btn btn-primary btn-sm">
        <i class="fas fa-save"></i> {{ 'orders.edit.submit'|trans }}
    </button>

    <a href="{{ path('show_order', { uuid: order.uuid }) }}" class="btn btn-secondary btn-sm">
        <i class="fas fa-arrow-left"></i> {{ 'actions.cancel'|trans }}
    </a>

    {{ form_end(form) }}
{% endblock %}
